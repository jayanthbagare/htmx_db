{
  "name": "htmx-db-api",
  "version": "1.0.0",
  "description": "Minimal Fastify API for HTMX Database-First Architecture",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --runInBand",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern=integration --runInBand",
    "test:functional": "NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern=functional --runInBand",
    "test:security": "NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern=security --runInBand",
    "test:integrity": "NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern=integrity --runInBand",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage --runInBand",
    "test:perf": "k6 run tests/performance/list_generation.k6.js",
    "test:load": "k6 run tests/load/sustained_load.k6.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "fastify": "^4.25.0",
    "@fastify/cors": "^8.5.0",
    "@fastify/static": "^7.0.0",
    "@fastify/formbody": "^7.4.0",
    "@fastify/cookie": "^9.2.0",
    "dotenv": "^16.3.1",
    "pino-pretty": "^10.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "@faker-js/faker": "^8.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "happyveggie",
  "license": "MIT"
}
